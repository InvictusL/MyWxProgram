/* pages/store/store.wxss */  
page{
  background: #EAEAEA;
}

.swiper{
  width: 100%;
  height: 300rpx;
}

.swiper-image{
  width: 98%;
  height: 300rpx;
  border-radius: 10rpx;
  margin: 10rpx 10rpx;
}

.words{
  margin-top: 30rpx;
  text-align: center;
  background-color: #f7f7ed;
  font-size: 30rpx;
  color: gray;
  letter-spacing: 10rpx;
  height: 80rpx;
  line-height:80rpx; 
}


.search{
  margin: 10rpx 10rpx;
  background-color: #FFF;
  border-radius: 10rpx;
}

.store-mid{
  margin-top: 10rpx;
  height: 140rpx;
  background-color: #f7f7ed;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.store-mid-item{
  height: 100rpx;
  display:inline-block;
  width: 100rpx;
  text-align: center;
}

.store-mid-item-image{
  height: 70rpx;
  width: 70rpx;
  background-size: cover;
}

.store-mid-item-name{
  font: medium;
  color: #000;
  font-size: 10pt;
}

.mycollection-scrollview{
  height:500rpx;
  white-space: pre-wrap;
  background-color: #f7f7ed;
}

.mycollection-bookview{
  margin: 8rpx 15rpx;
  height: 345rpx;
  width: 220rpx;
  display:inline-block;
  text-align: center;
  vertical-align:top;  /*解决inline block上对齐问题*/
}

.mycollection-bookview-image{
  width: 220rpx;
  height: 294rpx;
  border-radius: 10rpx; 
  background-size:cover;
}

.mycollection-bookview-name{
  font: medium;
  color: #000;
  font-size: 10pt;
  white-space:pre-wrap;
  width:220rpx;
}
.picker{
    padding: 13px;
    background-color: #FFFFFF;
}